    size_hint_x: 1
    size_hint_y: None
    height: "100dp"

    MDTextField:
        id: person_name
        text: 'jméno osoby'
        pos_hint: {'center_x': .5, 'center_y': .9}

    MDDropDownItem:
        id: state_item
