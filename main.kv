BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Koronavirus'
        md_bg_color: utils.get_color_from_hex('#1d3557')
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: utils.get_color_from_hex('#2a4c7d')

        MDBottomNavigationItem:
            name: 'screen 1'
